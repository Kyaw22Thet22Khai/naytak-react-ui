{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "isolatedModules": true,
    "types": ["vitest"],
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "vitest.setup.d.ts"
  ]
}
