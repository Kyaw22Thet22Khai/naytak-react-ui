{
  "name": "@naytak/react-ui",
  "version": "0.1.0",
  "private": false,
  "description": "Reusable React UI component library",
  "type": "module",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "./dist/index.css",
    "./dist/styles.css"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --sourcemap --external @naytak/react-ui",
    "postbuild": "powershell -NoProfile -Command \"Copy-Item dist\\index.css dist\\styles.css\"",
    "dev": "tsup src/index.ts --dts --format esm,cjs --sourcemap --watch --external @naytak/react-ui",
    "clean": "powershell -NoProfile -Command \"if (Test-Path dist) { Remove-Item dist -Recurse -Force }\"",
    "test": "vitest",
    "typecheck:test": "tsc -p tsconfig.test.json --noEmit",
    "ladle": "ladle serve",
    "ladle:build": "ladle build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css",
    "./index.css": "./dist/index.css"
  },
  "peerDependencies": {
    "react": ">=18 <20",
    "react-dom": ">=18 <20"
  },
  "devDependencies": {
    "@ladle/react": "^5.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^26.0.0",
    "tsup": "^8.0.2",
    "typescript": "~5.9.3",
    "vitest": "^4.0.16"
  }
}
