{
  "name": "naytak-react-ui",
  "version": "0.1.3",
  "description": "Reusable React UI component library",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kyaw22Thet22Khai/naytak-react-ui.git"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsup src/index.ts --dts --format esm,cjs --sourcemap",
    "clean": "powershell -NoProfile -Command \"if (Test-Path dist) { Remove-Item dist -Recurse -Force }\"",
    "test": "vitest",
    "typecheck:test": "tsc -p tsconfig.test.json --noEmit",
    "ladle": "ladle serve",
    "ladle:build": "ladle build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css",
    "./index.css": "./dist/index.css"
  },
  "peerDependencies": {
    "react": ">=18 <20",
    "react-dom": ">=18 <20"
  },
  "devDependencies": {
    "@ladle/react": "^5.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^26.0.0",
    "tsup": "^8.5.1",
    "typescript": "~5.9.3",
    "vitest": "^4.0.16"
  }
}
